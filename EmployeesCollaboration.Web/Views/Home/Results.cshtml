@model EmployeesCollaboration.Web.ViewModels.CollaborationResultViewModel

<h2>Results</h2>

<h3>Best Pair</h3>
<p>
    Employee @Model.BestPair.EmpId1 and Employee @Model.BestPair.EmpId2 worked together 
    for @Model.BestPair.TotalDays days in total.
</p>

<button onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-primary">New Upload</button>

<h3>Per Project</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Emp #1</th>
            <th>Emp #2</th>
            <th>Project</th>
            <th>Days Worked</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var row in Model.PerProject)
    {
        <tr>
            <td>@row.EmpId1</td>
            <td>@row.EmpId2</td>
            <td>@row.ProjectId</td>
            <td>@row.DaysWorked</td>
        </tr>
    }
    </tbody>
</table>

<h3>Totals</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Emp #1</th>
            <th>Emp #2</th>
            <th>Total Days</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var row in Model.Totals)
    {
        <tr>
            <td>@row.EmpId1</td>
            <td>@row.EmpId2</td>
            <td>@row.TotalDays</td>
        </tr>
    }
    </tbody>
</table>
